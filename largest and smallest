#include<stdio.h>
int main()
{
	int i,arr[6]={5,0,1,2,3};
	int n=sizeof (arr)/sizeof (arr[0]);
	int largest=arr[0],smallest=arr[0];
	for(i=1;i<6;i++)
	{
		if (arr[i]>largest)
		{
			largest=arr[i];
		}
		if(arr[i]<smallest)
		{
			smallest=arr[i];
		}
	}
	printf("largest number in the array:%d\n",largest);
	printf("smallest number in the array:%d\n",smallest);
	return 0;
}
